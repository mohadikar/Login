<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.sales.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/editText"
        android:drawableLeft="@drawable/ic_action_email"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded" />

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:paddingTop="13sp"
            android:paddingBottom="13sp"
            android:onClick="buttonClick"
            tools:ignore="HardcodedText,SmallSp"
            facebook:com_facebook_login_text="  Sign In"
            />


    </FrameLayout>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="OR"
        android:textSize="15dp"
        android:layout_marginTop="451dp"
        android:textColor="#000"
        tools:ignore="HardcodedText,SpUsage" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="460dp"
        android:background="#D3D3D3"
        android:layout_toLeftOf="@+id/tvText"
        tools:ignore="RtlHardcoded"
        android:id="@+id/view"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="460dp"
        android:background="#D3D3D3"
        android:layout_toRightOf="@+id/tvText"
        tools:ignore="RtlHardcoded"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_action_password"
        android:id="@+id/editText2"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/sign"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/but"
        android:onClick=""
        android:layout_alignStart="@+id/but" />

    <Button
        android:text="Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/but"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="350dp"
        android:background="#D3D3D3"
        android:layout_toLeftOf="@+id/tvText"
        tools:ignore="RtlHardcoded"
        android:id="@+id/view3"></View>
    <TextView
        android:id="@+id/tvText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="OR"
        android:textSize="15dp"
        android:layout_marginTop="343dp"
        android:textColor="#000"
        tools:ignore="HardcodedText,SpUsage" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="350dp"
        android:background="#D3D3D3"
        android:layout_toRightOf="@+id/tvText"
        tools:ignore="RtlHardcoded"></View>

    <Button
        android:text="Register with Mobile "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button3"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/tvText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="492dp"
        android:layout_marginBottom="10dp">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="148dp"
            android:text="Signup with Google "
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,ObsoleteLayoutParam"
            android:layout_alignTop="@+id/FrameLayout1"
            android:layout_alignStart="@+id/tvText"
            android:layout_marginStart="15dp" />

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/medi"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
